/*----------------------------------------------------------
 modal
------------------------------------------------------------*/
.m
  &_modal
    display none
    position fixed
    top 0
    left 0
    z-index 20
    width 100%
    height 100%
    &-outer
      display flex
      align-items center
      justify-content center
      width 100%
      height 100%
      background rgba(0,0,0,.7)
    &-window
      position relative
      width 85%
      max-width 950px
    &__btnClose
      position absolute
      top 5px
      right 5px
      width 20px
      height 20px
      text-indent -9999px
      transition .3s
      cursor pointer
      &:hover
        opacity .7
      &:before,
      &:after
        content ""
        display block
        position absolute
        top 0
        left 47%
        width 2px
        height 100%
        background #aaa
      &:before
        transform rotate(45deg)
      &:after
        transform rotate(-45deg)
    &-main
      padding 30px 15px 15px
      max-height 80vh
      background #fff
      border-radius 3px
      box-shadow 0 0 30px rgba(0, 0, 0, .3)
      overflow-y auto

@media $mq-pc
  .m_modal
    &__btnClose
      top 10px
      right 10px
    &-main
      padding 30px
